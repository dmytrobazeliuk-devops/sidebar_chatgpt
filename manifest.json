{
  "manifest_version": 3,
  "name": "AI Sidebar - Multi Provider",
  "description": "Toggle an AI-powered sidebar with ChatGPT, GitHub Copilot, Gemini, or Claude AI",
  "version": "0.2.0",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "action": {
    "default_title": "AI Sidebar",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "clipboardWrite",
    "contextMenus",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://github.com/copilot*",
    "https://github.com/copilot/*",
    "https://gemini.google.com/*",
    "https://claude.ai/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "side_panel": {
    "default_path": "src/sidebar.html"
  },
  "sidebar_action": {
    "default_page": "src/sidebar.html"
  },
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contentScript.js"],
      "css": ["src/sidebar.css"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Show or hide the AI sidebar"
    }
  }
}
